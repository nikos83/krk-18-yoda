
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <%= form_for(@document) do |form| %>
        <div class="form-group">
          <%= form.label :file %>
          <%= form.file_field :file, class:'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class:'form-control' %>
        </div>
          <div class="form-group">
          <%= form.label :bucket %>
            <%= form.collection_select(:bucket_id, current_user.buckets, :id, :name, {prompt: 'Choose a bucket' }) %>
        </div>
          <div class="form-group">
            <%= form.fields_for :bucket, current_user.buckets.build do |buckets_fields|%>
              <%= buckets_fields.text_field :name %>
              <% end %>
          </div> 
        <div class="form-group">
          <%= form.label :document_type %>
          <%= form.text_field :document_type,  class:'form-control' %>
        </div>
        <div class="form-group">
          <div class=" date" id="datetimepicker1" data-target-input="nearest">
            <%= form.label :issue_date %>
            <%= form.text_field :issue_date, class: 'datetimepicker-input form-control', 'data-target-input' => '#datetimepicker1' %>
            <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
          </div>
        </div>

        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>

      </div>
    </div>
  </div>
</div>
